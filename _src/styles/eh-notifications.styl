$color-text-code = 'B0A195';
$color-text = #B0A195;

.eh-notifications {
	position:absolute;
	top:0;
	left:50%;
	width:600px;
	margin-left:-300px;
	padding-top:6px;
	
	&-group {
		min-height:0;
		transition:all 0s .5s;
		
		&._count,
		&._history {
			min-height:72px;
			background:$color-back;
			border-radius:3px;
			box-shadow:0 12px 18px rgba(0,0,0,.1);
			transition:all 0s 0s;
		}
		
		&._history:after {
			content:'';
			position:absolute;
			top:30px;
			right:-12px;
			width:0;
			height:0;
			border-style:solid;
			border-width:12px 0 12px 12px;
			border-color:transparent transparent transparent $color-back;
		}
	}
	
	&-link {
		font-size:12px;
		line-height:36px;
		color:$color-text;
		text-transform:uppercase;
		text-align:center;
		
		opacity:.5;
		cursor:pointer;
		
		&:hover {
			opacity:1;
		}
	}
	
	&-button {
		position:absolute;
		top:12px;
		bottom:12px;
		right:0;
		width:72px;
		padding-top:24px;
		
		font-size:12px;
		line-height:24px;
		color:alpha($color-text,.5);
		text-align:center;
		
		cursor:pointer;
		
		&:before {
			content:'';
			position:absolute;
			top:0;
			right:72px;
			width:1px;
			height:100%;
			background-image:linear-gradient(to bottom, alpha($color-text,.5) 0%, alpha($color-text,.5) 50%, alpha($color-text,0) 50%, alpha($color-text,0) 100%);
			background-size:1px 2px;
			background-repeat:repeat-y;
		}
		
		&:after {
			content:'';
			position:absolute;
			top:12px;
			left:24px;
			width:24px;
			height:24px;
